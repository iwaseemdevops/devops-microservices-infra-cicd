pipeline {
    agent any

    parameters {
        booleanParam(
            name: 'DESTROY', 
            defaultValue: false, 
            description: 'Check to destroy infrastructure'
        )
    }

    environment {
        AWS_DEFAULT_REGION = 'ap-south-1'
        TF_DIR = 'terraform-app/envs/dev'
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/iwaseemdevops/devops-microservices-infra-cicd.git'
            }
        }

        stage('Terraform Init') {
            steps {
                dir("${TF_DIR}") {
                    sh 'terraform init'
                }
            }
        }

        stage('Terraform Validate') {
            steps {
                dir("${TF_DIR}") {
                    sh 'terraform validate'
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir("${TF_DIR}") {
                    withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'aws-creds']]) {
                        sh 'terraform plan -out=tfplan'
                    }
                }
            }
        }

        stage('Terraform Apply') {
            when {
                branch 'main'
            }
            steps {
                dir("${TF_DIR}") {
                    input message: 'Approve Apply?'
                    sh 'terraform apply -auto-approve tfplan'
                }
            }
        }

        stage('Terraform Destroy') {
            when {
                expression { return params.DESTROY == true }
            }
            steps {
                dir("${TF_DIR}") {
                    input message: 'Confirm destroy?'
                    sh 'terraform destroy -auto-approve'
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished.'
        }
        failure {
            echo '❌ Pipeline failed. Check logs!'
        }
        success {
            archiveArtifacts artifacts: '**/tfplan', fingerprint: true
            echo '✅ Terraform changes applied successfully.'
        }
    }
}
